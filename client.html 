                                <label for="feature-contact">Contact Form</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="feature-whatsapp" name="extraFeatures" value="WhatsApp Chat Button">
                                <label for="feature-whatsapp">WhatsApp Chat Button</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="feature-map" name="extraFeatures" value="Google Map">
                                <label for="feature-map">Google Map</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="feature-social" name="extraFeatures" value="Social Media Links">
                                <label for="feature-social">Social Media Links</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="feature-seo" name="extraFeatures" value="SEO Optimization">
                                <label for="feature-seo">SEO Optimization</label>
                            </div>
                            <div class="checkbox-item">
                                <input type="checkbox" id="feature-admin" name="extraFeatures" value="Admin Panel">
                                <label for="feature-admin">Admin Panel</label>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Section 9: Deadline & Budget -->
                <section class="form-section" aria-labelledby="section9-title">
                    <h2 id="section9-title" class="section-title">
                        <span class="section-number">9</span>
                        Deadline & Budget
                    </h2>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="deliveryDate">Expected Delivery Date</label>
                            <input 
                                type="date" 
                                id="deliveryDate" 
                                name="deliveryDate"
                                min=""
                            >
                        </div>

                        <div class="form-group">
                            <label for="budgetRange">Budget Range (USD)</label>
                            <select id="budgetRange" name="budgetRange">
                                <option value="">Select budget range...</option>
                                <option value="$500 - $1,000">$500 - $1,000</option>
                                <option value="$1,000 - $2,500">$1,000 - $2,500</option>
                                <option value="$2,500 - $5,000">$2,500 - $5,000</option>
                                <option value="$5,000 - $10,000">$5,000 - $10,000</option>
                                <option value="$10,000+">$10,000+</option>
                            </select>
                        </div>
                    </div>
                </section>

                <!-- Section 10: Additional Notes -->
                <section class="form-section" aria-labelledby="section10-title">
                    <h2 id="section10-title" class="section-title">
                        <span class="section-number">10</span>
                        Additional Notes
                    </h2>
                    
                    <div class="form-group">
                        <label for="additionalNotes">Special requests or additional information</label>
                        <textarea 
                            id="additionalNotes" 
                            name="additionalNotes" 
                            placeholder="Any other details you'd like to share..."
                        ></textarea>
                    </div>
                </section>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <span>Submit Project Details</span>
                        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </button>
                    <button type="reset" class="btn btn-secondary">Reset Form</button>
                </div>

                <!-- JSON Data Display -->
                <div id="dataDisplay" class="data-display">
                    <div class="data-display-header">
                        <span class="data-display-title">Submitted Data (JSON)</span>
                        <button type="button" class="copy-btn" onclick="copyToClipboard()">Copy JSON</button>
                    </div>
                    <pre id="jsonOutput"></pre>
                </div>

            </form>

            <!-- Footer -->
            <footer class="form-footer">
                <p>
                    <svg class="lock-icon" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                    All information shared will be kept confidential and used only for website development.
                </p>
            </footer>
        </div>
    </div>

    <script>
        /* ============================================
           JAVASCRIPT FUNCTIONALITY
           ============================================ */

        // Set minimum date for delivery date (today)
        document.getElementById('deliveryDate').min = new Date().toISOString().split('T')[0];

        // Form elements
        const form = document.getElementById('clientIntakeForm');
        const successMessage = document.getElementById('successMessage');
        const dataDisplay = document.getElementById('dataDisplay');
        const jsonOutput = document.getElementById('jsonOutput');

        /* ============================================
           VISUAL FEEDBACK FOR RADIO/CHECKBOX
           ============================================ */
        
        // Add selected class to radio items when checked
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove selected from all siblings
                const name = this.name;
                document.querySelectorAll(`input[name="${name}"]`).forEach(r => {
                    r.closest('.radio-item').classList.remove('selected');
                });
                // Add selected to current
                if (this.checked) {
                    this.closest('.radio-item').classList.add('selected');
                }
            });
        });

        // Add selected class to checkbox items when checked
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                this.closest('.checkbox-item').classList.toggle('selected', this.checked);
            });
        });

        /* ============================================
           FORM VALIDATION
           ============================================ */

        // Validation rules
        const validators = {
            fullName: (value) => value.trim().length >= 2,
            email: (value) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value),
            phone: (value) => value.trim().length >= 10,
            websitePurpose: (value) => value.trim().length >= 10,
            websiteType: () => document.querySelector('input[name="websiteType"]:checked') !== null,
            contentAvailability: () => document.querySelector('input[name="contentAvailability"]:checked') !== null,
            domainPurchased: () => document.querySelector('input[name="domainPurchased"]:checked') !== null,
            hostingAvailable: () => document.querySelector('input[name="hostingAvailable"]:checked') !== null
        };

        // Validate individual field
        function validateField(fieldName) {
            const field = document.querySelector(`[name="${fieldName}"]`);
            const errorElement = document.getElementById(`${fieldName}-error`);
            
            let isValid = true;
            
            if (field.type === 'radio') {
                isValid = validators[fieldName]();
            } else {
                isValid = validators[fieldName](field.value);
            }

            if (!isValid) {
                if (field.type !== 'radio') {
                    field.classList.add('error');
                }
                if (errorElement) {
                    errorElement.classList.add('show');
                }
                return false;
            } else {
                if (field.type !== 'radio') {
                    field.classList.remove('error');
                }
                if (errorElement) {
                    errorElement.classList.remove('show');
                }
                return true;
            }
        }

        // Real-time validation on blur
        document.querySelectorAll('input[required], textarea[required]').forEach(field => {
            field.addEventListener('blur', () => {
                validateField(field.name);
            });

            field.addEventListener('input', () => {
                if (field.classList.contains('error')) {
                    validateField(field.name);
                }
            });
        });

        // Validate radio groups on change
        document.querySelectorAll('input[type="radio"][required]').forEach(radio => {
            radio.addEventListener('change', () => {
                validateField(radio.name);
            });
        });

        /* ============================================
           FORM SUBMISSION
           ============================================ */

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Validate all required fields
            const requiredFields = ['fullName', 'email', 'phone', 'websitePurpose', 'websiteType', 'contentAvailability', 'domainPurchased', 'hostingAvailable'];
            let isFormValid = true;

            requiredFields.forEach(fieldName => {
                if (!validateField(fieldName)) {
                    isFormValid = false;
                }
            });

            if (!isFormValid) {
                // Scroll to first error
                const firstError = document.querySelector('.error, .error-message.show');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
                return;
            }

            // Collect form data
            const formData = collectFormData();

            // Log to console
            console.log('Form Submitted:', formData);
            console.log('JSON:', JSON.stringify(formData, null, 2));

            // Display JSON
            jsonOutput.textContent = JSON.stringify(formData, null, 2);
            dataDisplay.classList.add('show');

            // Show success message
            successMessage.classList.add('show');
            successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });

            // Reset form after delay
            setTimeout(() => {
                form.reset();
                resetVisualStates();
                successMessage.classList.remove('show');
                dataDisplay.classList.remove('show');
            }, 8000);
        });

        /* ============================================
           DATA COLLECTION
           ============================================ */

        function collectFormData() {
            const data = {
                clientInfo: {
                    fullName: document.getElementById('fullName').value.trim(),
                    businessName: document.getElementById('businessName').value.trim() || null,
                    email: document.getElementById('email').value.trim(),
                    phone: document.getElementById('phone').value.trim()
                },
                projectDetails: {
                    websiteType: getRadioValue('websiteType'),
                    websitePurpose: document.getElementById('websitePurpose').value.trim(),
                    pagesNeeded: getCheckboxValues('pagesNeeded'),
                    contentAvailability: getRadioValue('contentAvailability')
                },
                designPreferences: {
                    preferredColors: document.getElementById('preferredColors').value.trim() || null,
                    exampleWebsites: document.getElementById('exampleWebsites').value.trim() || null,
                    designStyle: document.getElementById('designStyle').value || null
                },
                technicalRequirements: {
                    domainPurchased: getRadioValue('domainPurchased'),
                    hostingAvailable: getRadioValue('hostingAvailable'),
                    extraFeatures: getCheckboxValues('extraFeatures')
                },
                logistics: {
                    deliveryDate: document.getElementById('deliveryDate').value || null,
                    budgetRange: document.getElementById('budgetRange').value || null
                },
                additionalNotes: document.getElementById('additionalNotes').value.trim() || null,
                submittedAt: new Date().toISOString()
            };

            return data;
        }

        function getRadioValue(name) {
            const radio = document.querySelector(`input[name="${name}"]:checked`);
            return radio ? radio.value : null;
        }

        function getCheckboxValues(name) {
            return Array.from(document.querySelectorAll(`input[name="${name}"]:checked`))
                .map(cb => cb.value);
        }

        /* ============================================
           UTILITY FUNCTIONS
           ============================================ */

        function resetVisualStates() {
            // Remove selected classes
            document.querySelectorAll('.radio-item, .checkbox-item').forEach(item => {
                item.classList.remove('selected');
            });
            
            // Remove error states
            document.querySelectorAll('.error').forEach(field => {
                field.classList.remove('error');
            });
            
            document.querySelectorAll('.error-message.show').forEach(msg => {
                msg.classList.remove('show');
            });
        }

        // Reset button handler
        form.addEventListener('reset', function() {
            setTimeout(resetVisualStates, 0);
            successMessage.classList.remove('show');
            dataDisplay.classList.remove('show');
        });

        // Copy to clipboard function
        function copyToClipboard() {
            const text = jsonOutput.textContent;
            navigator.clipboard.writeText(text).then(() => {
                const btn = document.querySelector('.copy-btn');
                const originalText = btn.textContent;
                btn.textContent = 'Copied!';
                setTimeout(() => {
                    btn.textContent = originalText;
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }

        // Initialize: Check for previously selected radios (page refresh)
        document.querySelectorAll('input[type="radio"]:checked').forEach(radio => {
            radio.closest('.radio-item').classList.add('selected');
        });
        document.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
            checkbox.closest('.checkbox-item').classList.add('selected');
        });
    </script>

</body>
</html>